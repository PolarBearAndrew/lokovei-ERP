extends layout

block content
  //- date picker
  link(rel="stylesheet", href="/stylesheets/bootstrap-datepicker3.min.css")
  script(src="javascript/bootstrap-datepicker.min.js")

  link(rel="stylesheet", href="/stylesheets/queue_order.css")
  script(src="javascript/queue_order.js")

  .container
    .row
      button.btn.btn-success.ctrl
        span.glyphicon.glyphicon-plus(aria-hidden='true')
        |   新增訂單
      select.form-control.sortCtrl
        option(value="startTime") 訂單日期
        option(value="endTime") 出車日期
        option(value="customer") 經銷商名稱

  - for( var i = 0 ; i < 3 ; i ++)
    - var orderId = i
    .order-wrapper(data-orderID= orderId )
      .table-wrapper
        table.table
          thead
            tr
              th 訂單編號
              th 經銷商
              th 經銷商地址
              th 聯絡電話
              th 採購人員
              th 接單人員
              th 數量合計
              th 訂購日期
              th 出車日期
              th 狀態
              th
          tbody
            tr
              td 101111212
              td(data-ctrl="customer", style='width: 100px') 全馬
              td 302 新竹縣竹北市中正東路61號
              td 03-5513598
              td 范老闆
              td(data-ctrl='em', style='width: 120px') Andrew
              td(data-ctrl="num") 25
              td(data-ctrl='date', style='width: 150px') 2015/8/20
                //- input.datepicker(data-date-format='mm/dd/yyyy').form-control(type='text')
              td(data-ctrl='date', style='width: 150px') 2015/8/31
                //- input.datepicker(data-date-format='mm/dd/yyyy').form-control(type='text')
              td
                button.btn.btn-success 已出貨
              td
                button.btn.btn-danger.ctrl
                  span.glyphicon.glyphicon-trash(aria-hidden='true')
                button.btn.btn-warning.ctrl.edit(data-orderID= orderId, data-onEdit='0')
                  span.glyphicon.glyphicon-pencil(aria-hidden='true')
                button.btn.btn-primary.ctrl
                  span.glyphicon.glyphicon-print(aria-hidden='true')
                button.btn.btn-success.ctrl
                  span.glyphicon.glyphicon-ok(aria-hidden='true')
      .table-wrapper-item
        table.table.table-hover
          thead
            tr
              th 產品編號
              th 品名規格
              th 數量
              th 狀態
              th 備註
              th 排程時間
          tbody
            tr
              td CHT-013-BO002
              td(data-ctrl="product"  style='width: 300px') Lokovei SR-800-寶馬棕
              td(data-ctrl="num") 3
              td
                label.label.label-primary 檢驗完成
              td(data-ctrl="text") 鎳氫電池改為離電池，並且加上懸掛系統
              td(data-ctrl="date") 2015/8/27
            tr
              td CHT-013-BO002
              td(data-ctrl="product"  style='width: 300px') Lokovei SR-800-寶馬棕
              td(data-ctrl="num") 3
              td
                label.label.label-warning 尚未完成
              td(data-ctrl="text") 鎳氫電池改為離電池，並且加上懸掛系統
              td(data-ctrl="date") 2015/8/27
            tr
              td CHT-013-BO002
              td(data-ctrl="product"  style='width: 300px') Lokovei SR-800-寶馬棕
              td(data-ctrl="num") 3
              td
                label.label.label-danger 維修中
              td(data-ctrl="text") 鎳氫電池改為離電池，並且加上懸掛系統
